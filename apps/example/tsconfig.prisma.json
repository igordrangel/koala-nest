{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./prisma/generated",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "declarationMap": false,
    "declaration": false,
    "sourceMap": false,
    "rootDir": "./prisma/generated",
    "tsBuildInfoFile": "./prisma/generated/tsconfig.tsbuildinfo",
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "src", "dist", "**/*.config.*", "**/*.test.ts"]
}