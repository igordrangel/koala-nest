{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nest Debug (Bun)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug",
        "--",
        "--inspect-brk"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "autoAttachChildProcesses": true
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Bun File",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false
    }
  ]
}
